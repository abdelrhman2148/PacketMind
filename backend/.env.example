# Wireshark+ Web Backend Configuration
# Copy this file to .env and configure as needed

# OpenAI Configuration
# Set your OpenAI API key to enable real AI analysis
# If not set, the system will use mock responses
OPENAI_API_KEY=your_openai_api_key_here

# AI Service Configuration
# Set to "false" to use OpenAI API when OPENAI_API_KEY is provided
# Set to "true" to always use mock responses (useful for development)
USE_MOCK_AI=true

# AI request timeout in seconds (default: 20)
AI_TIMEOUT=20

# Packet Capture Configuration
# Default network interface (leave empty for auto-detection)
DEFAULT_INTERFACE=

# Default BPF filter (leave empty for no filter)
DEFAULT_BPF_FILTER=

# Server Configuration
# Host and port for the FastAPI server
HOST=127.0.0.1
PORT=8000

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Anomaly Detection Configuration
# Rolling window size for traffic analysis in seconds (default: 60)
ANOMALY_WINDOW_SIZE=60

# Z-score threshold for anomaly detection (default: 3.0)
# Higher values = less sensitive, lower values = more sensitive
ANOMALY_THRESHOLD=3.0

# Minimum samples needed before anomaly detection starts (default: 10)
ANOMALY_MIN_SAMPLES=10

# Minimum seconds between similar alerts to prevent spam (default: 30)
ANOMALY_ALERT_COOLDOWN=30

# Development Configuration
# Set to "true" to enable development mode features
DEV_MODE=false